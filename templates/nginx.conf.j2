server {
        listen 443 ssl default_server;
        ssl_certificate {{ ssl_path }}/fullchain1.pem;
        ssl_certificate_key {{ ssl_path }}/privkey1.pem;
        ssl_trusted_certificate {{ ssl_path }}/chain1.pem;
        auth_basic           "closed site";
        auth_basic_user_file /etc/nginx/passwdfile;

        root /var/www/html;
        index index.html index.htm index.nginx-debian.html;

        server_name _;
        location / {
        proxy_pass http://localhost:1948/;
        }
# CHECKPOINT
}
